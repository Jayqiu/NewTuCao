<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/theme_default_primary"
        android:layout_height="wrap_content">
        <com.threehalf.tucao.view.smarttab.SmartTabLayout
            android:id="@+id/viewpagertab"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="@dimen/margin_4"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorWithoutPadding="true"
            app:stl_indicatorColor="@color/theme_default_primary_dark"
            app:stl_indicatorThickness="30dp"
            app:stl_indicatorCornerRadius="15dp"
            app:stl_underlineThickness="0dp"
            app:stl_underlineColor="@color/transparent"
            app:stl_dividerThickness="0dp"
            app:stl_defaultTabTextSize="18sp"
            app:stl_dividerColor="@color/transparent"
            app:stl_defaultTabTextColor="@color/white"
            app:stl_indicatorGravity="center"
            app:stl_distributeEvenly="true"
            app:stl_defaultTabTextHorizontalPadding="20dp"
            android:fillViewport="false" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>
