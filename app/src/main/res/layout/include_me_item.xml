<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >


        <ImageView
            android:id="@+id/background_img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="-100dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/scrollview_header" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignBottom="@+id/background_img"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginTop="27dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/attention_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/theme_default_primary"
                android:layout_alignParentRight="true"
                android:layout_marginRight="21dp"
                android:layout_marginTop="6dp"
                android:drawablePadding="3dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:gravity="center_vertical"
                android:text="吐槽新人"
                android:textSize="13sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/user_tucao_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="103dp"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text=""
                android:textSize="12sp"
                android:textColor="#A1A1A1" />

            <TextView
                android:id="@+id/user_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="103dp"
                android:layout_below="@id/user_tucao_num"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text=""
                android:textSize="12sp"
                android:textColor="#A1A1A1" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:padding="1px"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginLeft="21dp"
            android:contentDescription="@null"
            android:src="@color/white" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_avatar"
            android:layout_marginLeft="13dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:shadowColor="@android:color/black"
            android:shadowDx="3.0"
            android:shadowDy="3.0"
            android:shadowRadius="5.0"
            android:text="名字"
            android:textSize="20sp"
            android:textColor="@android:color/white" />

        <FrameLayout
            android:id="@+id/user_divider_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_avatar"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:contentDescription="@null"
                android:background="#DFDFDF" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:contentDescription="@null"
                android:src="@drawable/arrow_up" />
        </FrameLayout>

        <TextView
            android:id="@+id/user_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_divider_layout"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="#B1B1B1" />
    </RelativeLayout>

</RelativeLayout>